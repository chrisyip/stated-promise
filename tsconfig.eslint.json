{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": false,
    "module": "es6",
    "target": "es6",
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "webpack.config.ts",
    "./test/**/*",
    ".eslintrc.js",
    ".prettierrc.js"
  ]
}
